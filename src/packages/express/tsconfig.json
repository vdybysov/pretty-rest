{
    "compilerOptions": {
        "lib": [
            "esnext"
        ],
        "module": "commonjs",
        "target": "es2018",
        "esModuleInterop": true,
        "sourceMap": true,
        "noImplicitAny": false,
        "outDir": "dist",
        "rootDir": "src",
        "declaration": true,
        "incremental": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "dist",
        "build",
        "scripts"
    ]
}